{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@globals/*": ["./globals/*"],
      "@/*": ["./*"],
      "@assets/*" : ["./assets/*"],
      // "@clerk/*" : ["./node_modules/@clerk/*"]

    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
